{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Board document",
  "description": "Framework canvas: text boxes, status blocks (Red/Yellow/Green/Black), connection arrows. Node content uses text only. AI can read/edit this JSON.",
  "type": "object",
  "properties": {
    "nodes": {
      "type": "array",
      "description": "Cards on the canvas: text boxes and status containers",
      "items": {
        "type": "object",
        "required": ["id", "type", "x", "y"],
        "properties": {
          "id": { "type": "string", "description": "Unique node id" },
          "type": {
            "enum": ["text", "status", "checkbox"],
            "description": "text = text box; status = colored block; checkbox = task with checkable label"
          },
          "x": { "type": "number", "description": "Left position on canvas" },
          "y": { "type": "number", "description": "Top position on canvas" },
          "width": { "type": "number", "default": 200 },
          "height": { "type": "number", "default": 80 },
          "text": {
            "type": "string",
            "description": "Content for text, status, and checkbox nodes"
          },
          "fontSize": { "type": "number", "description": "For type=text only: font size in px" },
          "color": {
            "type": "string",
            "description": "For type=status: background color (preset or hex)"
          },
          "checked": {
            "type": "boolean",
            "description": "Legacy single checkbox"
          },
          "items": {
            "type": "array",
            "description": "For type=checkbox: [{id,text,checked},...]. Overrides text/checked when present.",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "text": { "type": "string" },
                "checked": { "type": "boolean" }
              }
            }
          }
        }
      }
    },
    "edges": {
      "type": "array",
      "description": "Connection arrows between nodes (clickable in app)",
      "items": {
        "type": "object",
        "required": ["id", "fromId", "toId"],
        "properties": {
          "id": { "type": "string" },
          "fromId": { "type": "string", "description": "Source node id" },
          "toId": { "type": "string", "description": "Target node id" },
          "color": { "type": "string", "description": "Arrow color (hex e.g. #ea580c)" },
          "label": { "type": "string", "description": "Optional text on the line" },
          "dashed": { "type": "boolean", "description": "Dashed line" },
          "bidirectional": { "type": "boolean", "description": "Arrowheads at both ends" }
        }
      }
    },
    "view": {
      "type": "object",
      "description": "Camera: pan and zoom",
      "properties": {
        "panX": { "type": "number" },
        "panY": { "type": "number" },
        "zoom": { "type": "number", "minimum": 0.25, "maximum": 2 }
      }
    }
  }
}
